<%= simple_form_for(@pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :clientes, label_method: :nome %>
    <%= f.association :pratos, label_method: :nome %>
    <%= f.association :bebidas, label_method: :nome %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
